{{>navbar}}
<main class="dib w-100">
  <section class="w-80 center">
    <form class="" action="/createevent" method="post">
      <header>Create Event</header>
      <label for="title">Title</label>
      <input type="text" name="title" value="" required>
      <label for="shortdesc">Short description</label>
      <input type="text" name="shortdesc" value="">
      <label for="longdesc">Long description</label>
      <input type="text" name="longdesc" value="">
      <label for="venue">Venue</label>
      <input type="text" name="venue" value="">
      <label for="location">Location</label>
      <input type="text" name="location" value="">
      <label for="startdate">Start date/time</label>
      <input type="text" name="startdatetime" value="" id="startdatetime" readonly="readonly">
      <img src="images2/cal.gif" onclick="javascript:NewCssCal ('startdatetime','ddMMyyyy','arrow',true,'12','','future')"  style="cursor:pointer"/>
      <label for="enddatetime">End date/time</label>
      <input type="text" name="enddatetime" value="" id="enddatetime" readonly="readonly">
      <img src="images2/cal.gif" onclick="javascript:NewCssCal ('enddatetime','ddMMyyyy','arrow',true,'12','','future')"  style="cursor:pointer"/>
      <label for="minage">Minimum age</label>
      <input type="text" name="minage" value="">
      <label for="ticketsavailable">Number of tickets/ tickets avaialble</label>
      <input type="number" step="1" name="ticketsavailable" value="">
      <label for="ticketname">Ticket name</label>
      <input type="text" name="ticketname" value="">
      <label for="additionalinfo">Additional info</label>
      <input type="text" name="additionalinfo" value="">
      <label for="maxallocaiton">Maximum allocation per charity</label>
      <input type="text" name="maxallocaiton" value="">
      <input type="reset">
      <input type="submit" value="Create Event">
    </form>
  </section>
<script src="datetimepicker_css.js"></script>
</main>
